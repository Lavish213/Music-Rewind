{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",

    "strict": true,
    "baseUrl": ".",
    "moduleResolution": "bundler",

    "paths": {
  "@ui/*": ["src/ui/*"],
  "@components/*": ["src/ui/components/*"],

  "@tokens": ["src/ui/tokens/index"],
  "@tokens/*": ["src/ui/tokens/*"],

  "@screens/*": ["src/screens/*"],
},

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}